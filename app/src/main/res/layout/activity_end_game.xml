<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_EndGame">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#695980"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-225dp">

        <TextView
            android:id="@+id/ENDGAME_TXT_CURRENT_WINNER"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:text="Winner"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/ENDGAME_IMG_WINNER"
            android:layout_width="255dp"
            android:layout_height="369dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="189dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="173dp"
            app:srcCompat="@drawable/ic_mario" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ENDGAME_BTN_Main_Page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Go to Main Page" />

            <Button
                android:id="@+id/ENDGAME_BTN_NEWGMAE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="start_new_game" />

            <Button
                android:id="@+id/ENDGAME_BTN_TOP10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="See Top10" />

        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>